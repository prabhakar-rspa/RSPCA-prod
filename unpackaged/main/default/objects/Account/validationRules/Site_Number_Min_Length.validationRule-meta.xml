<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Site_Number_Min_Length</fullName>
    <active>true</active>
    <description>Head Office Number Minimum Length must be 4 characters long.</description>
    <errorConditionFormula>IF(NOT(ISBLANK( Site_Number__c )),LEN( Site_Number__c ) &lt;&gt; 4, false)</errorConditionFormula>
    <errorDisplayField>Site_Number__c</errorDisplayField>
    <errorMessage>Site Number must be 4 characters long.</errorMessage>
</ValidationRule>
