<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>MobileNumberValidation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( MobilePhone , &quot;[0-9+\\-\\(\\)\\s]*&quot;))</errorConditionFormula>
    <errorDisplayField>MobilePhone</errorDisplayField>
    <errorMessage>Please enter a valid mobile number.</errorMessage>
</ValidationRule>
