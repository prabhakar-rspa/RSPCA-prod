        <!-- Non Completion Section -->
        <aura:if isTrue="{!v.woaSummaryRecord.CompletingWOA__c == 'No'}">
            <lightning:combobox aura:id="field" name="reasonForNonCompletion" label="Reason for non-completion of WOA?" value="{!v.woaPigs.Reason_for_non_completion_of_WOA__c}" options="{! v.reasonsForNonCompletionValues }" required="true" disabled="{!v.dynamicDisableField}"/>
            <!--Hidden field as atleast 2 fields is required for validation -->
            <lightning:input aura:id="field" label="hiddenValidationField" value="" class="hiddenComponent"/>
            <aura:if isTrue="{!v.woaPigs.Reason_for_non_completion_of_WOA__c == 'other'}">
                <lightning:textarea aura:id="field" name="otherNonCompletionReason" value="{!v.woaPigs.Other_non_completion_reason__c}" placeholder="Enter other reason" label="If other, please specify" maxlength="1000" messageWhenTooLong="A maximum of 1000 characters are allowed."  disabled="{!v.dynamicDisableField}" />
            </aura:if>
            <div class="slds-var-p-vertical_small">
                <div class="solidDivider"></div>                
            </div>
            <!-- Submit WOA section-->
            <div>
                <lightning:input type="toggle" label="Activate toggle and click 'Save' to submit WOA" name="completeWOA" checked="{!v.woaCompleteToggle}" messageToggleActive="Submit WOA" messageToggleInactive="WOA not submitted" disabled="{!v.dynamicDisableField}"/>
            </div>
        </aura:if>
    </div>
 
</aura:component>