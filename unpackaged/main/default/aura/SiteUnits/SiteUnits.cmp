<aura:component controller="SiteUnitsController" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader"
access="global">
<aura:attribute name="siteId" type="string"/>
<aura:attribute name="unitList" type="list"/>
<aura:handler name="init" value="{!this}" action="{!c.doInit}" />

<table class="slds-table slds-table_cell-buffer slds-table_bordered">
    <thead>
        <tr>
            <th>
                Unit Name
            </th>
            <th>
                Business
            </th>
            <th>
                Production
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        <aura:iteration items="{!v.unitList}" var="u" indexVar="index">
            <tr class="slds-hint-parent">
                <td>
                    <div class="slds-truncate" title="Unit Name">
                        {!u.Name}
                    </div> 
                </td>
                <td>
                    <div class="slds-truncate" title="Business">
                        {!u.Business__c}
                    </div>
                </td>
                <td>
                    <div class="slds-truncate" title="Production">
                        {!u.Production__c}
                    </div>
                    
                </td>
                <td>
                    <div class="slds-truncate" title="Status">
                        {!u.Status__c}
                    </div>
                </td>
            </tr>
        </aura:iteration>
        
    </tbody>
</table>

</aura:component>