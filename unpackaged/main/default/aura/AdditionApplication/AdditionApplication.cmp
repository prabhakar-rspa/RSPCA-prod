<aura:component controller="AdditionalApplicationController"
    implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader"
    access="global">
    <!-- New Application Record Attributes-->
    <aura:attribute name="newApplication" type="Object" />
    <aura:attribute name="NewApplicationFields" type="Object" />
    <aura:attribute name="newApplicationError" type="String" />
    <aura:attribute name="updateTypeValues" type="Object" />
    <aura:attribute name="payMethodValues" type="Object" />
    <c:LightningPicklist sObjectName="Application__c" fieldName="Update_Type__c"
        picklistValues="{!v.updateTypeValues}" />
    <c:LightningPicklist sObjectName="Application__c" fieldName="Payment_Method__c"
        picklistValues="{!v.payMethodValues}" />
    <force:recordData aura:id="applicationRecordCreate"
        fields="Existing_Member__c, Stage__c, Application_Type__c, Update_Type__c, Site__c, Head_Office__c, Agreement__c, No_Offences__c , Payment_Method__c, Applicant_Contact__c, Signatory_Contact__c, Agreement_Date__c"
        targetRecord="{!v.newApplication}" targetFields="{!v.NewApplicationFields}"
        targetError="{!v.newApplicationError}" />

    <!-- Current Site Record Attributes -->
    <aura:attribute name="siteFields" type="Object" />
    <aura:attribute name="siteRecordError" type="String" />
    <force:recordData aura:id="siteRecordLoader" recordId="{!v.recordId}" targetFields="{!v.siteFields}"
        fields="Id, ParentId" targetError="{!v.siteRecordError}" />

    <!-- Contact Record -->
    <aura:attribute name="primaryContact" type="Object" />
    <aura:attribute name="fullname" type="string" />

    <!-- Unit List to Create -->
    <aura:attribute name="unitList" type="Unit__c[]" /> 

    <!-- Unit Dependant Fields -->
    <!-- Controlling Field -->
    <aura:attribute name="businessPicklist" type="Object" />
    <c:LightningPicklist sObjectName="Unit__c" fieldName="Business__c" picklistValues="{!v.businessPicklist}"/>

    <!-- Animals dependant values-->
    <aura:attribute name="abattoirAnimals" type="List"  default="['Chickens', 'Beef Cattle', 'Dairy Cattle', 'Ducks', 'Laying Hens', 'Pigs', 'Salmon', 'Sheep', 'Trout', 'Turkeys', 'Veal Calves']"/>
    <aura:attribute name="catchingAnimals" type="List"  default="['Chickens', 'Ducks', 'Laying Hens', 'Turkeys']"/>
    <aura:attribute name="cleanerFishAnimals" type="List"  default="['Lumpfish', 'Wrasse']"/>
    <aura:attribute name="hatcheryAnimals" type="List"  default="['Meat Chicken Chicks', 'Ducklings', 'Laying Hen Chicks', 'Salmon', 'Trout', 'Turkey Poults']"/>
    <aura:attribute name="haulierAnimals" type="List"  default="['Chickens', 'Beef Cattle', 'Dairy Cattle', 'Ducks', 'Laying Hen Chicks', 'Laying Hens', 'Meat Chicken Chicks', 'Pigs', 'Pullets','Salmon', 'Sheep', 'Trout', 'Turkey Poults', 'Turkeys', 'Veal Calves']"/>
    <aura:attribute name="producerAnimals" type="List" default="['Chickens', 'Beef Cattle', 'Dairy Cattle', 'Ducks', 'Laying Hens', 'Pigs', 'Salmon', 'Sheep', 'Trout', 'Turkeys', 'Veal Calves', 'Pullets']" />

    <!-- Production Dependant values -->
    <aura:attribute name="abattoirProduction" type="List" default="['Abattoir']" />
    <aura:attribute name="catchingProduction" type="List" default="['Catching Team']" />
    <aura:attribute name="cleanerFishProduction" type="List" default="['Cleaner Fish']" />
    <aura:attribute name="poultryHatcheryProduction" type="List" default="['Hatchery']" />
    <aura:attribute name="FishHatcheryProduction" type="List" default="['Hatchery (On Grower)', 'Hatchery (Ova)']" />
    <aura:attribute name="haulierProduction" type="List" default="['Haulier']" />
    <aura:attribute name="supplyChainProduction" type="List" default="['Processor/Packer', 'Distributor', 'Processor', 'Packer', 'Wholesaler', 'Retailer', 'Brand/Marketing']" />
    <!-- Producer Animals production -->
    <aura:attribute name="salmonProduction" type="List" default="['Freshwater', 'Seawater']" />
    <aura:attribute name="troutProduction" type="List" default="['Freshwater']" />
    <aura:attribute name="beefCattleProduction" type="List" default="['Finishing', 'Rearing', 'Suckler']" />
    <aura:attribute name="dairyCattleProduction" type="List" default="['Dry Cows', 'Finishing', 'Heifers', 'Rearing']" />
    <aura:attribute name="pigsProduction" type="List" default="['Breeding', 'Finishing', 'Gilts', 'Rearing', 'Breeding to rearing', 'Breeding to finishing', 'Rearing to finishing']" />
    <aura:attribute name="sheepProduction" type="List" default="['Breeding', 'Finishing', 'Grazing']" />
    <aura:attribute name="vealProduction" type="List" default="['Calves']" />
    <aura:attribute name="chickenDuckProduction" type="List" default="['Producer']" />
    <aura:attribute name="layingHensProduction" type="List" default="['Flat deck (one-storey)', 'Flat deck (two storey)', 'Flat deck with Veranda', 'Multi-tier (one-storey)',' Multi-tier (two-storey)', 'Multi-tier with Veranda']" />
    <aura:attribute name="pulletProduction" type="List" default="['Flat deck (one-storey)', 'Flat deck (two storey)', 'Multi-tier (one-storey)',' Multi-tier (two-storey)']" />
    <aura:attribute name="turkeyProduction" type="List" default="['Brood', 'Finishing']" />

    <!-- Animal Dependant House Type values -->
    <aura:attribute name="houseTypeChickenDucksTurkeys" type="List" default="['Mobile', 'Static']" />
    <aura:attribute name="houseTypedairyCattle" type="List" default="['Cubicles', 'Loose yard', 'Straw yard']" />
    <aura:attribute name="houseTypesalmon" type="List" default="['Incubation', 'Incubation and Tank', 'Loch', 'Tank', 'TBC']" />

    <!-- Ingrediants Picklist values -->
    <aura:attribute name="ingrediantsPicklist" type="Object" />
    <c:LightningPicklist sObjectName="Unit__c" fieldName="Ingredients__c" picklistValues="{!v.ingrediantsPicklist}" />

    <!-- Order Sizes picklist value -->
    <aura:attribute name="orderSizesPicklist" type="Object" />
    <c:LightningPicklist sObjectName="Unit__c" fieldName="Order_Sizes__c" picklistValues="{!v.orderSizesPicklist}" />
    
    <!-- Vehicle Type Picklist-->
    <aura:attribute name="vehicleTypePicklist" type="Object" />
    <c:LightningPicklist sObjectName="Unit__c" fieldName="Vehicle_Type__c" picklistValues="{!v.vehicleTypePicklist}" />


    <!-- Poultry Units -->
    <aura:attribute name="poultryList" type="Unit__c[]" /> 
    <aura:attribute name="poultrySize" type="integer" />

    <!-- IsLoading boolean -->
    <aura:attribute name="isLoading" type="boolean" default="true" />
    
    <!-- Payment record or Application Record-->
    <aura:attribute name="submitResponse" type="Object" />


    <!-- Steps check -->
    <aura:attribute name="currentStep" type="string" default="1" />
    <aura:attribute name="step1" type="boolean" default="true" />
    <aura:attribute name="step2" type="boolean" default="false" />
    <aura:attribute name="step3" type="boolean" default="false" />
    <aura:attribute name="step4" type="boolean" default="false" />
    <aura:attribute name="hasError" type="boolean" default="false" />
    <aura:attribute name="newUnit" type="boolean" default="false" />
    <aura:attribute name="extension" type="boolean" default="false" />

    <!-- Initialise the component -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <!-- Modal Header -->
    <header class="slds-modal__header">
        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Update Site</h2>
    </header>
    <!-- Modal Content -->
    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
        
        <!-- Step 1 -->
        <!-- Form -->
        <aura:if isTrue="{!v.step1}">
            <!-- Is Loading -->
            <aura:if isTrue="{!v.isLoading}">
                <div class="exampleHolder">
                    <lightning:spinner alternativeText="Loading" size="medium" />
                </div>
                <div class="slds-notify slds-notify_alert slds-theme_alert-texture slds-theme_offline" role="alert">
                    <span class="slds-assistive-text">loading message</span>
                    <h2>
                        Application Loading. If it doesn't, close this window and try again or refresh your browser and try again.   
                    </h2>
                </div>
                      
                
                <aura:set attribute="else">
                    <aura:if isTrue="{!v.primaryContact != null}">
                        <div class="slds-form">
                            <h3 class="slds-section__title slds-theme_shade">
                                Choose type of update
                            </h3>
                            <lightning:input aura:id="field" label="Head Office" value="{!v.NewApplicationFields.Head_Office__c}"
                                class="hiddenComponent" />
                            <lightning:input aura:id="field" label="Site" value="{!v.NewApplicationFields.Site__c}"
                                class="hiddenComponent" />
            
                            <div class="slds-form-element slds-form-element_horizontal">
                                <label class="slds-form-element__label">
                                    Type of update
                                </label>
                                <lightning:select name="additionType" aura:id="field"
                                    value="{!v.NewApplicationFields.Update_Type__c}" required="true">
                                    <option label="Please select..."></option>
                                    <aura:iteration items="{!v.updateTypeValues}" var="item">
                                        <option value="{!item.value}">{!item}</option>
                                    </aura:iteration>
                                </lightning:select>
                            </div>
                        </div>
                        <aura:set attribute="else">
                            <div class="slds-notify slds-notify_alert slds-theme_alert-texture slds-theme_error" role="alert">
                                <span class="slds-assistive-text">error</span>
                                <h2>
                                    No primary contact found for this site. Please ensure that there is a primary contact available for this site.
                                </h2>
                            </div>
                            <br/>
        
                        </aura:set>
        
                    </aura:if>

                </aura:set>
            </aura:if>
            
        </aura:if>

        <!-- Step 2 -->
        <!-- Form -->
        <aura:if isTrue="{!v.step2}">
            <!-- New Units -->
            <aura:if isTrue="{!v.newUnit}">
                <div class="slds-form newUnitForm">
                    <h3 class="slds-section__title slds-theme_shade">
                        Add units
                    </h3>
                    
                    <div class="text-align-right slds-p-bottom_small">
                        
                            <lightning:button label="Add Unit" iconName="utility:add" iconPosition="right"
                                    onclick="{!c.addUnit}" />

                    </div>
                    <ui:scrollerWrapper class="addUnitScroll" >

                    
                        <aura:iteration items="{!v.unitList}" var="u" indexVar="index">
                            <article class="slds-card">
                                <!-- Card header -->
                                <div class="slds-card__header slds-grid">
                                    <header class="slds-media slds-media_center slds-has-flexi-truncate">
                                        <div class="slds-media__figure">
                                            <span class="slds-icon_container" title="Unit">
                                                <lightning:icon iconName="custom:custom57" alternativeText="Unit" />
                                                <span class="slds-assistive-text">Unit</span>
                                            </span>
                                        </div>
                                        <div class="slds-media__body">
                                            <h2 class="slds-card__header-title">
                                                <span>Unit # {!index + 1}</span>
                                            </h2>
                                        </div>
                                        <div class="slds-no-flex">
                                            <a onclick="{!c.removeRow}" data-record="{!index}">
                                                <lightning:icon iconName="utility:delete" size="small"
                                                    alternativeText="Delete" />
                                                <span class="slds-assistive-text">Delete</span>
                                            </a>
                                        </div>
                                    </header>
                                </div>
                        
                                <!-- Card content -->
                                <div class="slds-card__body slds-card__body_inner">
                                    

                                    <div class="slds-form" role="list">
                                        <!-- Unit Field Row 1 -->
                                        <div class="slds-form__row">
                                            <div class="slds-form__item" role="listitem">
                                                <div class="slds-form-element slds-form-element_horizontal slds-is-editing">
                                                    <div class="labelWithTooltip">
                                                        <label class="slds-form-element__label">
                                                            Unit Number
                                                        </label>
                                                        <lightning:helptext content="Number representing the house, shed, paddock, pen, tank, vehicle etc. Allows us to distinguish between units. Each unit must a unique sequential number. For example, 01, 02, 03 and so on."/>
                                                    </div>
                                                    
                                                    <lightning:input name="unitNumber" value="{!u.Name}" required="true"/>                                   
                                                </div>
                                            </div>

                                            <div class="slds-form__item" role="listitem">
                                                <div class="slds-form-element slds-form-element_horizontal slds-is-editing">
                                                    <label class="slds-form-element__label">Business</label>
                                                    <!-- Business Controlling field -->
                                                    <lightning:select aura:id="field" name="{!'business' + index}" value="{!u.Business__c}" required="true"  >
                                                        <option label="Please select..."></option>
                                                        <aura:iteration items="{!v.businessPicklist}" var="item">
                                                            <option value="{!item.value}">{!item}</option>
                                                        </aura:iteration>
                                                    </lightning:select>
                                                </div>
                                            </div>

                                        </div>
                                        
                                        <!-- Unit Field Row 2 -->
                                        <div class="slds-form__row">
                                            <div class="slds-form__item" role="listitem">
                                                <div class="slds-form-element slds-form-element_horizontal slds-is-editing">
                                                    <aura:if isTrue="{!u.Business__c == 'Supply Chain'}">
                                                        <div class="labelWithTooltip">
                                                            <label class="slds-form-element__label">
                                                                Ingredients
                                                            </label>
                                                            <lightning:helptext content="To add more ingredients, click 'Add Unit'."/>
                                                        </div>
                                                          
                                                        <aura:set attribute="else">
                                                            <div class="labelWithTooltip">
                                                            	<label class="slds-form-element__label">
                                                                	Animals
                                                            	</label>
                                                                <lightning:helptext content="If you process more than one species, please select the main species you process."/>
                                                            </div>
                                                        </aura:set>
                                                    </aura:if>
                                                                                
                                                    <!-- Animals Dependant Values -->
                                                    <aura:if isTrue="{!u.Business__c == 'Abattoir'}">
                                                        <!-- Abattoir animal values -->
                                                        <lightning:select aura:id="field" value="{!u.Animals__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.abattoirAnimals}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == 'Catching'}">
                                                        <!-- Catching animal values -->
                                                        <lightning:select  aura:id="field"  value="{!u.Animals__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.catchingAnimals}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == 'Cleaner Fish'}">
                                                        <!-- Cleaner Fish animal values -->
                                                        <lightning:select  aura:id="field"  value="{!u.Animals__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.cleanerFishAnimals}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == 'Hatchery'}">
                                                        <!-- Hatchery animal values -->
                                                        <lightning:select  aura:id="field"  value="{!u.Animals__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.hatcheryAnimals}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == 'Haulier'}">
                                                        <!-- Haulier animal values -->
                                                        <lightning:select  aura:id="field"  value="{!u.Animals__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.haulierAnimals}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == 'Producer'}">
                                                        <!-- Producer animal values -->
                                                        <lightning:select  aura:id="field"  value="{!u.Animals__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.producerAnimals}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == 'Supply Chain'}">
                                                        <!-- Supply Chain Ingrediants values -->
                                                        <lightning:select aura:id="field"  value="{!u.Ingrediants__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.ingrediantsPicklist}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == ''}">
                                                        <!-- No Business Selected animal values -->
                                                        <lightning:select aura:id="field"  value="{!u.Animals__c}" required="false" disabled="true">
                                                            <option label="Please select..."></option>
                                                        </lightning:select>
                                                    </aura:if>                                 
                                                    
                                                </div>
                                            </div>

                                            <div class="slds-form__item" role="listitem">
                                                <div class="slds-form-element slds-form-element_horizontal slds-is-editing">
                                                    <label class="slds-form-element__label">Production</label>
                                                    <aura:if isTrue="{!u.Business__c == 'Abattoir'}">
                                                        <!-- Abattoir production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <aura:iteration items="{!v.abattoirProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == 'Catching'}">
                                                        <!-- Catching production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <aura:iteration items="{!v.catchingProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == 'Cleaner Fish'}">
                                                        <!-- Cleaner Fish production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <aura:iteration items="{!v.cleanerFishProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!and(u.Business__c == 'Hatchery', or(u.Animals__c == 'Salmon', u.Animals__c == 'Trout'))}">
                                                        <!-- Fish Hatchery production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.FishHatcheryProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                        <aura:set attribute="else">
                                                            <!-- Only Hatchery Value-->
                                                            <aura:if isTrue="{!u.Business__c == 'Hatchery'}">
                                                                <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                                    <aura:iteration items="{!v.poultryHatcheryProduction}" var="item">
                                                                        <option value="{!item.value}">{!item}</option>
                                                                    </aura:iteration>                                                                        
                                                                </lightning:select>
                                                            </aura:if>
                                                        </aura:set>
                                                    </aura:if>
                                                    
                                                    <aura:if isTrue="{!u.Business__c == 'Haulier'}">
                                                        <!-- Haulier production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <aura:iteration items="{!v.haulierProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!u.Business__c == 'Supply Chain'}">
                                                        <!-- Supply Chain production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.supplyChainProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!and(u.Business__c == 'Producer', u.Animals__c == 'Salmon')}">
                                                        <!-- Producer Salmon production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.salmonProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!and(u.Business__c == 'Producer', u.Animals__c == 'Trout')}">
                                                        <!-- Producer trout production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <aura:iteration items="{!v.troutProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!and(u.Business__c == 'Producer', u.Animals__c == 'Beef Cattle')}">
                                                        <!-- Producer Beef Cattle production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.beefCattleProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!and(u.Business__c == 'Producer', u.Animals__c == 'Dairy Cattle')}">
                                                        <!-- Producer Dairy Cattle production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.dairyCattleProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!and(u.Business__c == 'Producer', u.Animals__c == 'Pigs')}">
                                                        <!-- Producer pigs production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.pigsProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
                                                        </lightning:select>
                                                    </aura:if>
                                                    <aura:if isTrue="{!and(u.Business__c == 'Producer', u.Animals__c == 'Sheep')}">
                                                        <!-- Producer Sheep production values -->
                                                        <lightning:select aura:id="field"  value="{!u.Production__c}" required="true" disabled="false">
                                                            <option label="Please select..."></option>
                                                            <aura:iteration items="{!v.sheepProduction}" var="item">
                                                                <option value="{!item.value}">{!item}</option>
                                                            </aura:iteration>
