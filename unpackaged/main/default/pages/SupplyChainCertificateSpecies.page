<apex:page controller="CertificatesPerSpeciesController" standardStylesheets="false" renderAs="pdf" showHeader="false" applyBodyTag="false" applyHtmlTag="false">
<head>
    <style>
        /* add margin and size to our page */
        @Page {
            /* add page's header and footer */
            @top-center { 
                content: element(header); 
            }
            @bottom-left { 
                content: element(footer);
            }
            /* Page Size */
            size: 8.27in 11.69in; /* A4 width and height */
            /* margin */
            margin-left: 0;
            margin-right: 0;
            margin-top: 0;
            margin-bottom:385px;
            
            /* padding */
            padding-top:140px;

        }

        /* sets the header as the matching element */
        div.header { 
            position: running(header); 

        }
        /* sets the footer as the matching element */
        div.footer { 
            position: running(footer); 



            /* font style */ 
            text-align: left;
            font-family: Arial, sans-serif;
            font-size: 12px;
            mso-height-rule: exactly;
            line-height: 20px;
            color: #000000;

        }

        div.content{
            margin-left: 35px;
            margin-right: 35px;
            padding-right: 35.5px;
            


        }
        div.content-bottom{
            
        }

        .s1 {
            font-style: normal;
            font-weight: normal;
            text-decoration: none;
            font-size: 26px;
            text-align: center;
        }
    </style>

</head>
