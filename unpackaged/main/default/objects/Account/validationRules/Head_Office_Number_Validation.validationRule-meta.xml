<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Head_Office_Number_Validation</fullName>
    <active>true</active>
    <description>Input must be an integer value.</description>
    <errorConditionFormula>IF(NOT(ISBLANK( Head_Office_Number__c )),NOT(ISNUMBER( Head_Office_Number__c )), false)</errorConditionFormula>
    <errorDisplayField>Head_Office_Number__c</errorDisplayField>
    <errorMessage>Head Office Number can only contain numbers.</errorMessage>
</ValidationRule>
