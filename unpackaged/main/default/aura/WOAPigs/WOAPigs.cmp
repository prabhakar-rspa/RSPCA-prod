<aura:component controller="WOAPigsController">
    <aura:attribute name="woaPigs" type="object"/>
    <aura:attribute name="woaSummaryRecord" type="object"/>
    <aura:attribute name="dynamicDisableField" type="boolean" default="true"/>
    <aura:attribute name="woaCompleteToggle" type="boolean" default="false"/>

    <aura:attribute name="bodyMarksError" type="String" />
    <aura:attribute name="manureError" type="String" />
    <aura:attribute name="legSwellingError" type="String" />
    <aura:attribute name="skinConditionError" type="String" />
    <aura:attribute name="shoulderLesionsError" type="String" />
    <aura:attribute name="vulvaLesionsError" type="String" />
    <aura:attribute name="tailLesionsError" type="String" />
    <aura:attribute name="bodyConditionError" type="String" />

    <aura:method name="validate" action="{!c.validateFields}" />
    <!-- Picklist field values -->
    
    <aura:attribute name="anySowsNoseRinged" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Were_there_any_sows_nose_ringed__c" picklistValuesCombobox="{!v.anySowsNoseRinged}" />

    <aura:attribute name="reasonsForNonCompletionValues" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Reason_for_non_completion_of_WOA__c" picklistValuesCombobox="{!v.reasonsForNonCompletionValues}" hiddenValues="['recently mixed','recently treated','not correct weight','multiple FF licence holder - more than one WOA generated for visit']"/>

    <aura:attribute name="drySowsOrFinishing" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Dry_sows_or_Finishing_pigs__c" picklistValuesCombobox="{!v.drySowsOrFinishing}" />
    <!--aura:attribute name="unitType" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Unit_Type__c" picklistValuesCombobox="{!v.unitType}" /-->

    <aura:attribute name="predominantBeddingType" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Predominant_bedding_type__c" picklistValuesCombobox="{!v.predominantBeddingType}" />

    <aura:attribute name="breedingRearingFinishingOptions" type="List" />
    <aura:attribute name="breedingRearingFinishinSelected" type="List" default="[]"/>
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Breeding_Rearing_Finishing__c" picklistValuesCombobox="{!v.breedingRearingFinishingOptions}" />

    <aura:attribute name="continuousOrBatch" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Continuous_or_batch__c" picklistValuesCombobox="{!v.continuousOrBatch}" />

    <aura:attribute name="predominantSubstrate" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Predominant_substrate__c" picklistValuesCombobox="{!v.predominantSubstrate}" />
    
    <aura:attribute name="objectInPen" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Object_in_pen__c" picklistValuesCombobox="{!v.objectInPen}" />

    <aura:attribute name="objectSuspendedOrGround" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Object_s_suspended_or_on_ground__c" picklistValuesCombobox="{!v.objectSuspendedOrGround}" />

    <aura:attribute name="tailLengths" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Tail_lengths__c" picklistValuesCombobox="{!v.tailLengths}" />

    <aura:attribute name="earBittenPresent" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Ear_Bitten_Pigs_Present__c" picklistValuesCombobox="{!v.earBittenPresent}" />

    <aura:attribute name="flankBittenPresent" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Flank_bitten_pigs_present__c" picklistValuesCombobox="{!v.flankBittenPresent}" />

    <aura:attribute name="furtherCareReasons" type="List" />
    <aura:attribute name="furtherCareSelected" type="List" default="[]"/>
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Reason_for_further_care__c" picklistValuesCombobox="{!v.furtherCareReasons}" />

    <aura:attribute name="predominantBodyRegionsList" type="List" />
    <aura:attribute name="predominantBodyRegionSelected" type="List" default="[]"/>
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Predominant_body_region_s_of_body_marks__c" picklistValuesCombobox="{!v.predominantBodyRegionsList}" />

    <aura:attribute name="improvementsMadeList" type="List" />
    <aura:attribute name="improvementsMadeSelected" type="List" default="[]"/>
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Improvements_made_in_last_12_month__c" picklistValuesCombobox="{!v.improvementsMadeList}" />

    <aura:attribute name="improvementsPlannedList" type="List" />
    <aura:attribute name="improvementsPlannedSelected" type="List" default="[]"/>
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Improvements_planned_for_next_12_months__c" picklistValuesCombobox="{!v.improvementsPlannedList}" />

    <aura:attribute name="wantsAdvice" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Wants_advice__c" picklistValuesCombobox="{!v.wantsAdvice}" />

    <aura:attribute name="sexedOrUnsexed" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Are_pens_sexed_or_unsexed__c" picklistValuesCombobox="{!v.sexedOrUnsexed}" />

    <aura:attribute name="unitTypeDrySows" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Unit_Type_dry_sows__c" picklistValuesCombobox="{!v.unitTypeDrySows}" />

    <aura:attribute name="unitTypeFinishingPigs" type="List" />
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Unit_type_Finishing_Pigs__c" picklistValuesCombobox="{!v.unitTypeFinishingPigs}" />
    
    <aura:attribute name="penDesignDrySows" type="List" />
    <aura:attribute name="penDesignDrySowsSelected" type="List" default="[]"/>
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Pen_design_dry_sows__c" picklistValuesCombobox="{!v.penDesignDrySows}" />

    <aura:attribute name="penDesignFinishing" type="List" />
    <aura:attribute name="penDesignFinishingSelected" type="List" default="[]"/>
    <c:LightningPicklist sObjectName="WOAPigs__c" fieldName="Pen_design_finishing_pigs__c" picklistValuesCombobox="{!v.penDesignFinishing}" hiddenValues="['N/A']"/>
    
     <!-- Initialise the component -->
     <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

     <!-- Methods -->
     <!--<aura:method name="additionalValidations" action="{!c.additionalValidations}" access="PUBLIC"></aura:method>-->
     <aura:method name="savePigs" action="{!c.savePigs}" access="PUBLIC"></aura:method>

     <div class="c-container">
        <!-- Dry sows or finishing pigs -->
        <aura:if isTrue="{!v.woaSummaryRecord.CompletingWOA__c == 'No'}">
            <lightning:dualListbox aura:id="field" name="Breeding_Rearing_Finishing" label= "Unit Type" sourceLabel="Available" selectedLabel="Selected" value="{!v.breedingRearingFinishinSelected}" options="{!v.breedingRearingFinishingOptions}" onchange="{! c.handleBreedingRearingFinishingChange }" required="true" disabled="{!v.dynamicDisableField}"/>
        </aura:if>

        <lightning:combobox aura:id="field" name="drySowsOrFinishing" label="Dry sows or Finishing pigs" value="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c}" options="{! v.drySowsOrFinishing }" required="true" disabled="{!v.dynamicDisableField}"/>
        <!-- solid line -->
        <div class="slds-var-p-vertical_small">
            <div class="solidDivider"></div>                
        </div>

        <aura:if isTrue="{!v.woaSummaryRecord.CompletingWOA__c == 'Yes'}">
            <!-- New Unit Section -->
            <lightning:input aura:id="field" type="checkbox" label="New unit (no certificate in last 12 months)" name="newUnit" checked="{!v.woaPigs.New_unit__c}" disabled="{!v.dynamicDisableField}"/>
            <lightning:input aura:id="field" type="checkbox" label="Membership transfer (in past 12 months)" name="transfer" checked="{!v.woaPigs.Membership_transfer__c}" disabled="{!v.dynamicDisableField}"/>


            <!-- solid line -->
            <div class="slds-var-p-vertical_small">
                <div class="solidDivider"></div>                
            </div>

            <!-- Unit type Section -->
            <div>
                <div class="page-section page-header">
                    <h2 class="slds-text-heading_small">Unit type</h2>
                </div>
                <lightning:dualListbox aura:id="field" name="Breeding_Rearing_Finishing" label= "Breeding/Rearing/Finishing" sourceLabel="Available" selectedLabel="Selected" value="{!v.breedingRearingFinishinSelected}" options="{!v.breedingRearingFinishingOptions}" onchange="{! c.handleBreedingRearingFinishingChange }" required="true" disabled="{!v.dynamicDisableField}"/>
                <aura:if isTrue="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c == 'Dry sows'}">
                    <lightning:combobox aura:id="field"  label="Are dry sows continuous or batch" value="{!v.woaPigs.Continuous_or_batch__c}" options="{! v.continuousOrBatch }" required="true" disabled="{!v.dynamicDisableField}"/>

                </aura:if>
                <aura:if isTrue="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c == 'Finishing pigs'}">
                    <lightning:combobox aura:id="field"  label="Are finishing pigs continuous or batch" value="{!v.woaPigs.Continuous_or_batch__c}" options="{! v.continuousOrBatch }" required="true" disabled="{!v.dynamicDisableField}"/>
                    <lightning:combobox aura:id="field"  label="Are pens sexed or unsexed" value="{!v.woaPigs.Are_pens_sexed_or_unsexed__c}" options="{! v.sexedOrUnsexed }" required="true" disabled="{!v.dynamicDisableField}"/>
                </aura:if>
            </div>

            <!-- solid line divider -->
            <div class="slds-var-p-vertical_small">
                <div class="solidDivider"></div>                
            </div>

            <!-- Numbers Section -->
            <div>
                <div class="page-section page-header">
                    <h2 class="slds-text-heading_small">Numbers</h2>
                </div>
                <lightning:input aura:id="field" type="number" name="Total number of pigs on farm" label="Total number of pigs on farm" placeholder="0" value="{!v.woaPigs.Total_number_of_pigs_on_farm__c}" required="true" disabled="{!v.dynamicDisableField}"/>
                <aura:if isTrue="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c == 'Dry sows'}">
                    <lightning:input aura:id="field" type="number" name="Total number of dry sows on farm" label="Total number of dry sows on farm" placeholder="0" value="{!v.woaPigs.Total_number_of_dry_sows_on_farm__c}" required="true" disabled="{!v.dynamicDisableField}"/>
                </aura:if>
                <!--lightning:input aura:id="field" type="number" name="Total number of finishing pigs on farm" label="Total number of finishing pigs on farm" placeholder="0" value="{!v.woaPigs.Total_number_of_finishing_pigs_on_farm__c}" required="true" disabled="{!v.dynamicDisableField}"/-->

                
                <aura:if isTrue="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c == 'Finishing pigs'}">
                    <lightning:input aura:id="field" type="number" name="Total number of finishing pigs on farm" label="Total number of finishing pigs on farm" placeholder="0" value="{!v.woaPigs.Total_number_of_finishing_pigs_on_farm__c}" required="true" disabled="{!v.dynamicDisableField}"/>
                </aura:if>
                <lightning:input aura:id="field" type="checkbox" label="Pigs treated (as batch) within the past 7 days" name="Pigs treated (as batch) within the past 7 days" checked="{!v.woaPigs.Pigs_treated_as_batch_within_the_past__c}" disabled="{!v.dynamicDisableField}"/>
                <lightning:input aura:id="field" type="checkbox" label="Pigs mixed (inc. drawn) within past 7 days" name="Pigs mixed (inc. drawn) within past 7 days" checked="{!v.woaPigs.Pigs_mixed_inc_drawn_within_past_7_da__c}" disabled="{!v.dynamicDisableField}"/>
            </div>

            <!-- solid line divider -->
            <div class="slds-var-p-vertical_small">
                <div class="solidDivider"></div>                
            </div>

            <!-- Housing type Section -->
            <div>
                <div class="page-section page-header">
                    <h2 class="slds-text-heading_small">Housing type</h2>
                </div>
                <aura:if isTrue="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c == 'Dry sows'}">
                    <lightning:combobox aura:id="field" label="Unit type" value="{!v.woaPigs.Unit_Type_dry_sows__c}" options="{! v.unitTypeDrySows }" required="true" disabled="{!v.dynamicDisableField}"/>
                    <lightning:dualListbox aura:id="field" label="Pen design" sourceLabel="Available" selectedLabel="Selected" value="{!v.penDesignDrySowsSelected}" options="{!v.penDesignDrySows}" onchange="{! c.handlePenDesignDrySowsChange }" required="true" disabled="{!v.dynamicDisableField}"/>
                </aura:if>
                <aura:if isTrue="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c == 'Finishing pigs'}">
                    <lightning:combobox aura:id="field" label="Unit type" value="{!v.woaPigs.Unit_type_Finishing_Pigs__c}" options="{! v.unitTypeFinishingPigs }" required="true" disabled="{!v.dynamicDisableField}"/>
                    <lightning:dualListbox aura:id="field" label="Pen design" sourceLabel="Available" selectedLabel="Selected" value="{!v.penDesignFinishingSelected}" required="true" options="{!v.penDesignFinishing}" onchange="{! c.handlePenDesignFinishingChange }" disabled="{!v.dynamicDisableField}"/>
                </aura:if>
                <lightning:input aura:id="field" name="Other (specify)" label="Other pen design" value="{!v.woaPigs.Other_pen_design__c}" maxlength="255" disabled="{!v.dynamicDisableField}"/>
            </div>

            <!-- solid line divider -->
            <div class="slds-var-p-vertical_small">
                <div class="solidDivider"></div>                
            </div>

            <!-- Bedding Section -->
            <div>
                <div class="page-section page-header">
                    <h2 class="slds-text-heading_small">Bedding</h2>
                </div>
                <lightning:combobox aura:id="field" name="Predominant bedding type" label="Predominant bedding type" value="{!v.woaPigs.Predominant_bedding_type__c}" options="{! v.predominantBeddingType }" required="true" disabled="{!v.dynamicDisableField}"/>
                <lightning:input aura:id="field" name="Other_bedding_type" label="Other bedding type" value="{!v.woaPigs.Other_bedding_type__c}" maxlength="255" disabled="{!v.dynamicDisableField}"/>
            </div>

            <!-- solid line divider -->
            <div class="slds-var-p-vertical_small">
                <div class="solidDivider"></div>                
            </div>

            
            <aura:if isTrue="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c == 'Dry sows'}">
                <!-- Mortality for dry sows -->
                <div>
                    <div class="page-section page-header">
                        <h2 class="slds-text-heading_small">Mortality</h2>
                    </div>
                    <lightning:input required="true" aura:id="field" type="number"  label="% mortality in last 12 months (not including euthanased)" placeholder="0.0" max="100" step="0.01" value="{!v.woaPigs.Percentage_mortality_in_dry_sows__c}"  disabled="{!v.dynamicDisableField}"/>
                    <lightning:input aura:id="field" type="checkbox" label="No pig mortality"  checked="{!v.woaPigs.No_pig_mortality_in_dry_sows__c}" disabled="{!v.dynamicDisableField}"/>
                    <lightning:input required="true" aura:id="field" type="number"  label="% euthanased in last 12 months" placeholder="0.0" max="100" step="0.01" value="{!v.woaPigs.Percentage_euthanased_in_dry_sows__c}"  disabled="{!v.dynamicDisableField}"/>
                    <lightning:input aura:id="field" type="checkbox" label="No pigs euthanased"  checked="{!v.woaPigs.No_pig_euthanased_in_dry_sows__c}" disabled="{!v.dynamicDisableField}"/>
                    <lightning:textarea required="true" aura:id="field"  label="Predominant mortality reason in last 12 months" value="{!v.woaPigs.Predominant_reason_dry_sows__c}"  maxlength="32768" messageWhenTooLong="A maximum of 32768 characters are allowed." disabled="{!v.dynamicDisableField}" />
                </div>

                <!-- solid line divider -->
                <div class="slds-var-p-vertical_small">
                    <div class="solidDivider"></div>                
                </div>
            </aura:if>

            <aura:if isTrue="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c == 'Finishing pigs'}">
                <aura:if isTrue="{!v.woaPigs.Continuous_or_batch__c == 'Continuous'}">
                    <!-- Mortality - continuous production (finishing)-->
                    <div>
                        <div class="page-section page-header">
                            <h2 class="slds-text-heading_small">Mortality - continuous production</h2>
                        </div>
                        <lightning:input required="true" aura:id="field" type="number"  label="Percentage mortality in last 12 months (not including euthanased)" placeholder="0.0" max="100" step="0.01" value="{!v.woaPigs.Percentage_mortality_in_continuous__c}"  disabled="{!v.dynamicDisableField}"/>
                        <lightning:input aura:id="field" type="checkbox" label="No pig mortality in last 12 months"  checked="{!v.woaPigs.No_pig_mortality_in_continuous__c}" disabled="{!v.dynamicDisableField}"/>
                        <lightning:input required="true" aura:id="field" type="number"  label="Percentage euthanased in last 12 months" placeholder="0.0" max="100" step="0.01" value="{!v.woaPigs.Percentage_euthanased_mortalitycontinous__c}"  disabled="{!v.dynamicDisableField}"/>
                        <lightning:input aura:id="field" type="checkbox" label="No pig euthanased in last 12 months"  checked="{!v.woaPigs.No_pig_euthanased_in_continuous__c}" disabled="{!v.dynamicDisableField}"/>
                        <lightning:textarea required="true" aura:id="field"  label="Predominant mortality reason in last 12 months" value="{!v.woaPigs.Predominant_reason_continuous__c}"  maxlength="32768" messageWhenTooLong="A maximum of 32768 characters are allowed." disabled="{!v.dynamicDisableField}" />
                    </div>
                </aura:if>

                <aura:if isTrue="{!v.woaPigs.Continuous_or_batch__c == 'Batch'}">
                    <!-- Mortality - continuous production (finishing)-->
                    <div>
                        <div class="page-section page-header">
                            <h2 class="slds-text-heading_small">Mortality - batch production</h2>
                        </div>
                        <lightning:input required="true" aura:id="field" type="number"  label="Percentage mortality in current batch (not including euthanased)" placeholder="0.0" max="100" step="0.01" value="{!v.woaPigs.Percentage_mortality_not_including_euth__c}"  disabled="{!v.dynamicDisableField}"/>
                        <lightning:input aura:id="field" type="checkbox" label="No pig mortality in current batch"  checked="{!v.woaPigs.No_pig_mortality__c}" disabled="{!v.dynamicDisableField}"/>
                        <lightning:input required="true" aura:id="field" type="number"  label="Percentage euthanased in current batch" placeholder="0.0" max="100" step="0.01" value="{!v.woaPigs.Percentage_euthanased_mortality__c}"  disabled="{!v.dynamicDisableField}"/>
                        <lightning:input aura:id="field" type="checkbox" label="No pig euthanased in current batch"  checked="{!v.woaPigs.No_pig_euthanased__c}" disabled="{!v.dynamicDisableField}"/>
                        <lightning:textarea required="true" aura:id="field"  label="Predominant mortality reason in current batch" value="{!v.woaPigs.Predominant_reason__c}"  maxlength="32768" messageWhenTooLong="A maximum of 32768 characters are allowed." disabled="{!v.dynamicDisableField}" />

                        <lightning:input required="true" aura:id="field" type="number"  label="Average percentage mortality in previous two batches (not including euthanased)" placeholder="0.0" max="100" step="0.01" value="{!v.woaPigs.Average_mortality_prev_2_batch_no_euth__c}"  disabled="{!v.dynamicDisableField}"/>
                        <lightning:input required="true" aura:id="field" type="number"  label="Average percentage euthanased in previous two batches" placeholder="0.0" max="100" step="0.01" value="{!v.woaPigs.Average_mortality_prev_2_batch__c}"  disabled="{!v.dynamicDisableField}"/>
                        <lightning:textarea required="true" aura:id="field"  label="Predominant mortality reason in previous two batches" value="{!v.woaPigs.Predominant_mort_reason_prev_2_batch__c}"  maxlength="32768" messageWhenTooLong="A maximum of 32768 characters are allowed." disabled="{!v.dynamicDisableField}" />

                    </div>
                </aura:if>
                

                <!-- solid line divider -->
                <div class="slds-var-p-vertical_small">
                    <div class="solidDivider"></div>                
                </div>

                <!-- Weights -->
                <div>
                    <div class="page-section page-header">
                        <h2 class="slds-text-heading_small">Weights</h2>
                    </div>
                    <lightning:input aura:id="field" type="date" label="Batch start date" value="{!v.woaPigs.Batch_start_date__c}"  disabled="{!v.dynamicDisableField}"/>
                    <lightning:input aura:id="field" type="number"  label="Start age (weeks)" placeholder="0"  value="{!v.woaPigs.Start_age__c}"  disabled="{!v.dynamicDisableField}"/>
                    <lightning:input aura:id="field" type="number"  label="Start weight (kg)" placeholder="0"  value="{!v.woaPigs.Start_weight__c}"  disabled="{!v.dynamicDisableField}"/>
                    <lightning:input aura:id="field" type="number"  label="End weight (kg)" placeholder="0"  value="{!v.woaPigs.End_weight__c}"  disabled="{!v.dynamicDisableField}"/>

                </div>

                <!-- solid line divider -->
                <div class="slds-var-p-vertical_small">
                    <div class="solidDivider"></div>                
                </div>
            </aura:if>

            <!-- Pig numbers Section -->
            <div>
                <div class="page-section page-header">
                    <h2 class="slds-text-heading_small">Pig numbers</h2>
                </div>
                <!--aura:if isTrue="{!v.woaPigs.Dry_sows_or_Finishing_pigs__c == 'Finishing pigs'}">
                    <lightning:input aura:id="field" type="number"  label="Number of pens with pigs 30 - 50kg" placeholder="0" value="{!v.woaPigs.Number_of_pens_with_pigs_30_50kg__c}"  required="true" disabled="{!v.dynamicDisableField}"/>
                </aura:if-->
                <lightning:input aura:id="field" type="number" name="Total number of pigs in pens 1 - 5" label="Total number of pigs in pens 1 - 5" placeholder="0" value="{!v.woaPigs.Total_number_of_pigs_in_pens_1_5__c}" required="true" disabled="{!v.dynamicDisableField}"/>
                <lightning:input aura:id="field" type="number" name="Number of pigs assessed in pens 1 - 5" label="Number of pigs assessed in pens 1 - 5" placeholder="0" value="{!v.woaPigs.Number_of_pigs_assessed_in_pens_1_5__c}"  required="true" disabled="{!v.dynamicDisableField}" onchange="{!c.handleNumberOfPigChange}"/>

            </div>

            <!-- solid line divider -->
            <div class="slds-var-p-vertical_small">
                <div class="solidDivider"></div>                
            </div>

            <!-- Pen enrichment Section -->
            <div>
                <div class="page-section page-header">
                    <h2 class="slds-text-heading_small">Pen enrichment</h2>
                </div>
                <lightning:combobox aura:id="field" name="Predominant substrate" label="Predominant substrate" value="{!v.woaPigs.Predominant_substrate__c}" options="{! v.predominantSubstrate }" required="true" disabled="{!v.dynamicDisableField}"/>
                <lightning:input aura:id="field" name="otherSubstrate" label="Other substrate" value="{!v.woaPigs.Other_substrate__c}" maxlength="255" disabled="{!v.dynamicDisableField}"/>
                <lightning:combobox aura:id="field" name="Object in pen" label="Object in pen" value="{!v.woaPigs.Object_in_pen__c}" options="{! v.objectInPen }" required="true" disabled="{!v.dynamicDisableField}"/>
                <lightning:input aura:id="field" name="Other_object_in_pen" label="Other object in pen" value="{!v.woaPigs.Other_object_in_pen__c}" maxlength="255" disabled="{!v.dynamicDisableField}"/>
                <lightning:input aura:id="field" type="number" name="Average_number_of_objects_per_pen" label="Average number of objects per pen (assessed in pens 1-5)" placeholder="0" step="0.01" value="{!v.woaPigs.Average_number_of_objects_per_pen__c}" required="true" disabled="{!v.dynamicDisableField}"/>                
                <lightning:combobox aura:id="field" name="Object(s) suspended or on ground" label="Object(s) suspended or on ground" value="{!v.woaPigs.Object_s_suspended_or_on_ground__c}" options="{! v.objectSuspendedOrGround }" disabled="{!v.dynamicDisableField}"/>
                <lightning:input aura:id="field" type="number" name="Number_of_pigs_manipulating_enrichmen" label="Number of pigs manipulating enrichment (assessed in pens 1 - 5)" placeholder="0" value="{!v.woaPigs.Number_of_pigs_manipulating_enrichmen__c}" required="true" disabled="{!v.dynamicDisableField}"/>
                <lightning:input aura:id="field" type="number" name="pigs_manipulating_other_than_enrichment" label="Number of pigs manipulating something other than enrichment (assessed in pens 1 - 5)" placeholder="0" value="{!v.woaPigs.pigs_manipulating_other_than_enrichment__c}" required="true" disabled="{!v.dynamicDisableField}"/>
