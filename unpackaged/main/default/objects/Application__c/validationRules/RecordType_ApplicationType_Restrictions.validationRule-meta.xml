<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RecordType_ApplicationType_Restrictions</fullName>
    <active>false</active>
    <errorConditionFormula>OR(
AND( 
RecordType.Name = &#39;Other&#39;,  ISPICKVAL( Application_Type__c , &#39;New&#39;) 
)
)</errorConditionFormula>
