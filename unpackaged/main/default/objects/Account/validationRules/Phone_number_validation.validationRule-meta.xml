<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_number_validation</fullName>
    <active>true</active>
    <description>Validation rule used to validate the phone number.</description>
    <errorConditionFormula>NOT(REGEX(Phone, &quot;[0-9+\\-\\(\\)\\s]*&quot;))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Please enter a valid phone number.</errorMessage>
</ValidationRule>
